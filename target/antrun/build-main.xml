<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <echo message="Start generating entities .."/>
  <taskdef classname="org.hibernate.tool.ant.HibernateToolTask" name="hibernatetool"/>
  <hibernatetool>
    <jdbcconfiguration configurationfile="src/main/resources/hibernate.cfg.xml" revengfile="src/main/resources/hibernate.reveng.xml" detectmanytomany="true" packagename="com.teamdelta.sandwichpitstop.dm"/>
    <hbm2java jdk5="true" destdir="src/main/java" ejb3="true"/>
  </hibernatetool>
  <echo message="End generating entities"/>
</target>
</project>